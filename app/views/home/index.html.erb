<% if current_user %>
    <div class="container">
      <div class="jumbotron">
        <h1><small>クーポン</small>「スタジアム観戦無料」<small>をGET!!!</small></h1>
      </div>
      <% if @client %>
          <% @client.user_timeline(count: 3000, tweet_mode: "extended" ).each do |tweet| %>
              <p>
                <label>本文</label>
                <%= tweet.attrs[:full_text] %><br/>
                <label>いいね数</label>
                <%= tweet.favorite_count %>
                <label>リツイート数</label>
                <%= tweet.retweet_count %><br/>
                <label>引用ツイートか？</label>
                <%= tweet.retweet? ? "リツイートです": "リツイートではありません" %>
                <label>返信か？</label>
                <%= tweet.reply? ? "リプライです": "リプライではありません" %>
              </p>
          <% end %>
      <% end %>
    </div>
<% else %>
    <div class="container">
      <div class="jumbotron">
        <h1>いいねクーポン</h1>
        <p>つぶやきについた「いいね」でクーポンをもらおう!</p>
        <p><%= link_to "Twitterでログイン","/auth/twitter", class: "btn btn-primary btn-lg" %></p>
      </div>
    </div>
<% end %>